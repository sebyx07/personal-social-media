<div class="text-center text-3xl font-bold">
  <%= @peer.name %>
</div>

<% if @peer.email_hexdigest.present? %>
  <div class="mt-4">
    <%= image_tag PeersService::Gravatar.new(email_hexdigest: @peer.email_hexdigest).url(size: 240), class: "rounded-full mx-auto" %>
  </div>
<% end %>

<div class="flex justify-center mt-4">
  <%= render(Peers::RelationshipButtonComponent.new(peer: @peer)) %>
</div>

<%= render_async posts_path(post_type: :standard, peer_id: @peer.id) do %>
  <div class="h-screen bg-gray-300 w-full w-1/3 mx-auto p-3">
    <div class="text-gray-600">
      Loading posts
    </div>
  </div>
<% end %>
